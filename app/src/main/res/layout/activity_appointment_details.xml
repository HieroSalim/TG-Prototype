<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AppointmentDetailsActivity"
    android:layout_margin="16dp"
    android:paddingTop="50dp"
    >

    <TextView
    android:id="@+id/appointment_user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="User"
    android:textSize="18sp"
    />
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/appointment_user"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/appointment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appointment_user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Data"
        android:textSize="18sp"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/appointment_date"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/appointment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appointment_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Horario"
        android:textSize="18sp"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/appointment_time"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/appointment_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appointment_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Endereço"
        android:textSize="18sp"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/appointment_address"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/appointment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appointment_address"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Preço"
        android:textSize="18sp"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/appointment_price"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/appointment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appointment_price"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Status"
        android:textSize="18sp"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/appointment_status"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Voltar"
        android:background="@drawable/button_border"
        />

</androidx.constraintlayout.widget.ConstraintLayout>